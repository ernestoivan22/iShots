<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.ivan.saberespoder.LoginActivity"
    android:background="@drawable/my_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#00000000" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:clickable="true"
                android:contentDescription="@string/user_icon"
                android:src="@drawable/user"
                android:background="#00000000"
                android:layout_weight="1"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="155dp"
                android:layout_height="61dp"
                android:id="@+id/imageView7"
                android:src="@drawable/logopeq"
                android:background="#00000000" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton15"
                android:src="@drawable/info"
                android:background="#00000000"
                android:layout_weight="1"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Agregar shot"
        android:id="@+id/textView6" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="362dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shot_titulo"
            android:editable="true"
            android:background="#fffff9ff"
            android:hint="Ingrese el tÃ­tulo"
            android:capitalize="sentences"
            android:inputType="textCapSentences"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textMultiLine|textCapSentences"
            android:ems="10"
            android:id="@+id/shot_contenido"
            android:hint="Ingrese el contenido del shot"
            android:background="#fffafbff"
            android:editable="true"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:gravity="top"
            android:capitalize="sentences"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Agregar"
            android:id="@+id/btn_agregar_shot"
            android:onClick="addShot"
            android:layout_weight="0.08" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:id="@+id/button4"
            android:layout_weight="0.08" />
    </LinearLayout>
</LinearLayout>
