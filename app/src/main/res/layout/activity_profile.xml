<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    android:paddingBottom="0dp" tools:context=".PantallaPrincipal"
    android:background="#ff5e9be3">

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#ffa3bfd9" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toProfile"
                    android:clickable="true"
                    android:contentDescription="@string/user_icon"
                    android:src="@drawable/user"
                    android:background="@android:drawable/bottom_bar"
                    android:layout_weight="1"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="155dp"
                    android:layout_height="61dp"
                    android:id="@+id/iShots"
                    android:src="@drawable/logopeq"
                    android:background="@android:drawable/btn_default" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Conf"
                    android:src="@drawable/settings"
                    android:background="@android:drawable/bottom_bar"
                    android:layout_weight="1"
                    android:layout_gravity="center" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mi perfil"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/opcionesPerfil">

            <ListView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/listView"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>